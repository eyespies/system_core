<% if @config['hostname'] -%>
hostname: <%= @config['hostname'] %>
<% end -%>
files:
<% if @config.key('files')
     @config['files'].each do |file, tag| -%>
  - path: <%= file %>
<%     unless tag.nil? -%>
    tag: <%= tag %>
<%     end
     end
   end
-%>
destination:
  host: <%= @papertrail_host %>
  port: <%= @papertrail_port %>
  protocol: <%= @papertrail_protocol %>
<% if @config.key?('exclude_patterns') -%>
exclude_patterns:
<%   @config['exclude_patterns'].each do |pattern| -%>
  - <%= pattern %>
<%   end
   end
-%>
